<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <title>Leaderboard</title>
    <meta charset="utf-8" />

    <body>
      <% let rank = 0; %> <% leaders.forEach(function(leader) { %>
      <div class="lsit">
        <h1><%= rank %></h1>
        <% rank++ %>
        <p><%= leader.fullName %></p>
        <p><%= leader.rank %></p>
        <p><%= leader.username %></p>
        <p><%= leader.email %></p>
        <p><%= leader.points %></p>
      </div>
      <% }) %>
    </body>
  </head>
</html>
